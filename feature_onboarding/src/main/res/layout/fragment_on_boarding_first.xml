<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/onboarding_background"
        tools:context="com.fx_trading.lessons.feature_onboarding.ui.OnBoardingFirstFragment">

        <TextView
            android:id="@+id/title_onboarding_first"
            style="@style/onboarding_large_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="94dp"
            android:text="@string/title_onboarding_first"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/onboarding_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/onboarding_wallet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_onboarding_first" />

        <TextView
            android:id="@+id/more_than_left"
            style="@style/onboarding_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_than"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/more_than_right"
            app:layout_constraintTop_toBottomOf="@id/onboarding_wallet" />

        <TextView
            android:id="@+id/webinars_parcipicans_value"
            style="@style/onboarding_medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 000"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/more_than_right"
            app:layout_constraintTop_toBottomOf="@id/more_than_left" />

        <TextView
            android:id="@+id/youtobe_subscribers_value"
            style="@style/onboarding_medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 000"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="@id/more_than_right"
            app:layout_constraintRight_toRightOf="@id/more_than_right"
            app:layout_constraintTop_toBottomOf="@id/more_than_right" />

        <TextView
            android:id="@+id/webinars_parcipicans"
            style="@style/onboarding_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/webinar_participants"
            app:layout_constraintLeft_toLeftOf="@id/more_than_left"
            app:layout_constraintRight_toRightOf="@id/more_than_left"
            app:layout_constraintTop_toBottomOf="@id/webinars_parcipicans_value" />

        <TextView
            android:id="@+id/youtobe_subscribers"
            style="@style/onboarding_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youtobe_subsribers"
            app:layout_constraintLeft_toLeftOf="@id/more_than_right"
            app:layout_constraintRight_toRightOf="@id/more_than_right"
            app:layout_constraintTop_toBottomOf="@id/youtobe_subscribers_value" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bottom_barriew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="youtobe_subscribers,webinars_parcipicans" />

        <TextView
            android:id="@+id/lesson_made_by"
            style="@style/onboarding_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/lessons_made_by"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_barriew"/>

        <TextView
            android:id="@+id/top_experts"
            style="@style/onboarding_medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_experts"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lesson_made_by" />

        <TextView
            android:id="@+id/in_trading_and_economy"
            style="@style/onboarding_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/in_trading_and_economy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_experts"/>

        <TextView
            android:id="@+id/more_than_right"
            style="@style/onboarding_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_than"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/more_than_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onboarding_wallet" />

        <Button
            android:id="@+id/button_next"
            style="@style/onboarding_button_green"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
