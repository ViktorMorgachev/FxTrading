<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quiz"
            type="com.fx_trading.lessons.domain.entities.quiz.QuestionsGroup" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/default_you_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="114dp"
            android:text="@string/your_level"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/level_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textStyle="bold"
            android:text="@string/beginner"
            android:textColor="@color/black"
            android:textSize="42sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/default_you_level">

        </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/item_level_info"
            android:minHeight="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level_info"
            android:layout_height="wrap_content">

            <include
                android:visibility="gone"
                android:id="@+id/beginner_item"
                layout="@layout/beginner_item"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include
                android:visibility="gone"
                android:id="@+id/intermediate_item"
                layout="@layout/intermediate_item"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content" />

            <include
                android:visibility="gone"
                android:id="@+id/expert_item"
                layout="@layout/expert_level_item"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_level_info"
            android:textColor="@color/black"
            android:text="@string/defeult_info_level_top"
            android:layout_width="wrap_content"
            android:id="@+id/default_strongly_recommended_text"
            android:layout_height="wrap_content">

        </TextView>

        <ImageView
            app:layout_constraintTop_toBottomOf="@id/default_strongly_recommended_text"
            android:layout_width="wrap_content"
            android:id="@+id/image_level"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/beginner_bottom"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_left"
            app:layout_constraintTop_toTopOf="@id/image_level"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toLeftOf="@id/image_level"
            app:layout_constraintBottom_toBottomOf="@id/image_level"
            android:text="@string/explore_the"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_right"
            app:layout_constraintTop_toTopOf="@id/image_level"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@id/image_level"
            app:layout_constraintBottom_toBottomOf="@id/image_level"
            android:text="@string/material"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button"
            style="@style/button_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
