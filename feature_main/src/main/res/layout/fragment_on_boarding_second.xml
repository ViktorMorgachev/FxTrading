<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/onboarding_background"
        tools:context="com.fx_trading.lessons.features.com.fx_trading.lessons.feature_main.feature_onboarding.main.OnBoardingSecondFragment">


        <TextView
            android:layout_width="0dp"
            android:id="@+id/lets_test_skills"
            android:layout_marginTop="131dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/onboarding_large_text"
            android:text="@string/lets_test_your_skills"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/onboarding_wallet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintHeight_percent="0.25"
            android:src="@drawable/onboarding_book"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lets_test_skills" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/onboarding_wallet"
            android:id="@+id/bottom_text"
            android:gravity="center"
            style="@style/onboarding_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16sp"
            android:text="@string/onboarding_text_bottom"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/button_next"
            style="@style/onboarding_button_green"
            android:text="@string/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
