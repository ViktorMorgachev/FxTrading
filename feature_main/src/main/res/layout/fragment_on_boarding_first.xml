<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/onboarding_background"
        tools:context="com.learning.lessons.features.com.fx_trading.lessons.feature_main.feature_onboarding.main.OnBoardingFirstFragment">

        <TextView
            android:id="@+id/title_onboarding_first"
            style="@style/onboarding_large_text"
            android:layout_width="match_parent"
            android:paddingTop="48sp"
            app:layout_constraintHeight_percent="0.3"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:text="@string/title_onboarding_first"
            app:layout_constraintBottom_toTopOf="@id/onboarding_wallet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/onboarding_wallet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            android:adjustViewBounds="true"
            app:layout_constraintVertical_bias="0"
            android:src="@drawable/onboarding_wallet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_onboarding_first" />

        <TextView
            android:id="@+id/more_than_left"
            style="@style/onboarding_small_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/more_than"
            app:layout_constraintBottom_toTopOf="@id/webinars_parcipicans_value"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/more_than_right"
            app:layout_constraintTop_toBottomOf="@id/wallet_bottom_barriew" />

        <TextView
            android:id="@+id/webinars_parcipicans_value"
            style="@style/onboarding_medium_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="120 000"
            app:layout_constraintBottom_toTopOf="@id/webinars_parcipicans"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/youtobe_subscribers_value"
            app:layout_constraintTop_toBottomOf="@id/more_than_left" />

        <TextView
            android:id="@+id/youtobe_subscribers_value"
            style="@style/onboarding_medium_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="100 000"
            app:layout_constraintBottom_toTopOf="@id/youtobe_subscribers"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/webinars_parcipicans_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/more_than_right" />

        <TextView
            android:id="@+id/webinars_parcipicans"
            style="@style/onboarding_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/webinar_participants"
            app:layout_constraintBottom_toTopOf="@id/bottom_barriew"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/youtobe_subscribers"
            app:layout_constraintTop_toBottomOf="@id/webinars_parcipicans_value" />

        <TextView
            android:id="@+id/youtobe_subscribers"
            style="@style/onboarding_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/youtobe_subsribers"
            app:layout_constraintLeft_toLeftOf="@id/more_than_right"
            app:layout_constraintRight_toRightOf="@id/more_than_right"
            app:layout_constraintTop_toBottomOf="@id/youtobe_subscribers_value" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bottom_barriew"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="youtobe_subscribers,webinars_parcipicans" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/wallet_bottom_barriew"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="onboarding_wallet"/>

        <LinearLayout
            android:id="@+id/bottom_block"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@id/wallet_bottom_barriew"
            app:layout_constraintBottom_toTopOf="@id/button_next"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/lesson_made_by"
                style="@style/onboarding_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintBottom_toTopOf="@id/top_experts"
                android:text="@string/lessons_made_by"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottom_barriew" />

            <TextView
                android:id="@+id/top_experts"
                style="@style/onboarding_medium_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/top_experts"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lesson_made_by" />

            <TextView
                android:id="@+id/in_trading_and_economy"
                style="@style/onboarding_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintVertical_bias="1"
                android:text="@string/in_trading_and_economy"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_experts" />

        </LinearLayout>



        <TextView
            android:id="@+id/more_than_right"
            style="@style/onboarding_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/more_than"
            app:layout_constraintBottom_toTopOf="@id/youtobe_subscribers_value"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/more_than_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_bottom_barriew" />

        <Button
            android:id="@+id/button_next"
            style="@style/bottom_button_green"
            android:text="@string/next"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
