<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="16sp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <include layout="@layout/button_like_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dislike_item"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/like_item">
    </include>

    <include
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        layout="@layout/button_dislike_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/like_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/dislike_item"
        android:layout_height="match_parent"
        android:layout_width="wrap_content" />

</LinearLayout>