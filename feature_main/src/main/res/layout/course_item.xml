<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/course_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_promo_course"
            android:layout_width="match_parent"
            android:minHeight="144dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mock_video_background"
            app:layout_constraintBottom_toTopOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/course_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/course_top_item_background"
            android:padding="4dp"
            android:text="@string/course"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintLeft_toLeftOf="@id/iv_promo_course"
            app:layout_constraintTop_toTopOf="@id/iv_promo_course" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="14sp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_promo_course"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            tools:text="@string/long_text">
        </TextView>

        <include
            android:id="@+id/like_item_root"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="4dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/like_item"/>

        <TextView
            android:id="@+id/lessons_in_course"
            tools:text="11 Lessons"
            android:layout_marginVertical="4dp"
            android:textColor="@color/secondaryTextColor"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toLeftOf="@id/difficultyItem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toRightOf="@id/like_item_root"/>

        <com.learning.feature_main.custom.DifficultyView
            android:layout_width="wrap_content"
            android:id="@+id/difficultyItem"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>



