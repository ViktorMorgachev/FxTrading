<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quiz"
            type="com.fx_trading.lessons.domain.entities.quiz.QuestionsGroup" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/main_root"
        android:background="@color/white"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_main_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/great_job"
                android:textColor="@color/black"
                android:textSize="38sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/motivation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/motivation_success"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_main_result">

            </TextView>

            <ImageView
                android:id="@+id/result_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/success_result"
                app:layout_constraintHeight_percent="0.23"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/motivation_text" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/lesson_difficulty_panel"
                android:paddingVertical="4dp"
                app:layout_constraintTop_toBottomOf="@id/percent_panel_layout"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/stars"
                    layout="@layout/stars_item"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@+id/stars"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/lesson_easy"
                    style="@style/result_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/percent_panel_layout"
                app:layout_constraintTop_toBottomOf="@id/result_image"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/default_score_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_score"
                    style="@style/result_gray_text">

                </TextView>

                <TextView
                    android:id="@+id/percent_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:textColor="@color/black"
                    android:textSize="38sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText">

                </TextView>

                <TextView
                    android:id="@+id/default_score_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    style="@style/result_gray_text"
                    android:layout_gravity="center"
                    android:text="@string/your_score" />

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_values_panel"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintTop_toBottomOf="@id/lesson_difficulty_panel"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/count_result_answers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#90A4AE"
                    android:layout_marginRight="60dp"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/default_count_success_answers"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/count_total_questions"
                    app:layout_constraintHorizontal_weight="1">

                </TextView>


                <TextView
                    android:id="@+id/default_count_success_answers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/right_answers_count"
                    android:textSize="14sp"
                    style="@style/result_gray_text"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="@id/count_result_answers"
                    app:layout_constraintRight_toRightOf="@id/count_result_answers"
                    app:layout_constraintTop_toBottomOf="@id/count_result_answers">

                </TextView>

                <TextView
                    android:id="@+id/count_total_questions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="4"

                    android:layout_marginLeft="60dp"
                    android:textSize="38sp"
                    android:textColor="#90A4AE"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintBottom_toTopOf="@id/default_total_questions"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/count_result_answers">

                </TextView>

                <TextView
                    android:id="@+id/default_total_questions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total_questions"
                    android:textSize="14sp"

                    style="@style/result_gray_text"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="@id/count_total_questions"
                    app:layout_constraintRight_toRightOf="@id/count_total_questions"
                    app:layout_constraintTop_toBottomOf="@id/count_total_questions">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/finish_button"
            style="@style/button_bottom_blue_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>
