<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_promo_lesson"
            android:layout_width="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="88dp"
            android:src="@drawable/mock_video_image"
            app:layout_constraintRight_toLeftOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_video_duration"
            tools:text="00:00"
            app:layout_constraintRight_toRightOf="@id/iv_promo_lesson"
            app:layout_constraintBottom_toBottomOf="@id/iv_promo_lesson"
            android:layout_width="wrap_content"
            android:background="@color/secondaryTextColor"
            android:textColor="@color/primaryTextColor"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="14sp"
            app:layout_constraintVertical_bias="0"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/iv_like"
            app:layout_constraintLeft_toRightOf="@id/iv_promo_lesson"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_promo_lesson"
            tools:text="@string/long_text">
        </TextView>

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_like"
            android:layout_marginStart="16sp"
            android:paddingTop="2dp"
            android:paddingBottom="6dp"
            app:layout_constraintLeft_toRightOf="@id/iv_promo_lesson"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/count_of_likes"
            tools:text="145"
            app:layout_constraintTop_toTopOf="@id/iv_like"
            android:layout_marginStart="8dp"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>



