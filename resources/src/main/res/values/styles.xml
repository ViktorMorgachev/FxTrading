<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="onboarding_button_green">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/onboarding_button_green</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="button_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/onboarding_button_default</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="quiz_button_selected">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/quiz_answer_button_selected</item>
        <item name="android:gravity">start|center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="quiz_button_default">
        <item name="android:background">@drawable/quiz_answer_button_default</item>
        <item name="android:gravity">start|center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="quiz_button_correct">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/quiz_answer_button_correct</item>
        <item name="android:gravity">start|center</item>
        <item name="android:drawableEnd">@drawable/correct</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="quiz_button_incorrect">
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">@drawable/quiz_answer_button_error</item>
        <item name="android:gravity">start|center</item>
        <item name="android:drawableEnd">@drawable/incorrect</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="quiz_bottom_button_light_blue">
        <item name="android:background">@drawable/quiz_bottom_button_light_blue</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#2962FF</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_blue">
        <item name="android:background">@drawable/quiz_bottom_button_blue</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="onboarding_skip_test_button">
        <item name="android:background">@drawable/skip_first_test_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableEnd">@drawable/skip_first_test_arrow</item>
    </style>

    <style name="onboarding_small_text">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="onboarding_medium_text">

        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="onboarding_large_text">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>