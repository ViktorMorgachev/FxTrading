<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">#1A4DC2</item>
        <item name="itemTextColor">@color/primaryTextColor</item>
    </style>

    <style name="onboarding_button_green">
        <item name="android:background">@drawable/onboarding_button_green</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="button_bottom_light_blue_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/onboarding_button_default</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_bottom_blue_default">
        <item name="android:background">@drawable/quiz_bottom_button_blue</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="answer_button_selected">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/quiz_answer_button_selected</item>
        <item name="android:gravity">start|center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="answer_button_default">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/quiz_answer_button_default</item>
        <item name="android:gravity">start|center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="answer_button_correct">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/quiz_answer_button_correct</item>
        <item name="android:gravity">start|center</item>
        <item name="android:drawableEnd">@drawable/correct</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="answer_button_incorrect">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/quiz_answer_button_error</item>
        <item name="android:gravity">start|center</item>
        <item name="android:drawableEnd">@drawable/incorrect</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="quiz_bottom_button_disabled">
        <item name="android:background">@drawable/quiz_bottom_button_gray</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="quiz_bottom_button_check">
        <item name="android:background">@drawable/quiz_bottom_button_light_blue</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#2962FF</item>
    </style>

    <style name="onboarding_small_text">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="onboarding_medium_text">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="onboarding_large_text">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_toolbar_text">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>


</resources>